@model IList<Apresentacao.Models.PokemonModel>

<script type="text/javascript" src="~/js/adicional/config.js"></script>

<div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <img class="logoPokemon" src="~/images/pokemon.png" />
            <img class="logoPokebola" src="~/images/pokebola.png" />
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-center">
        <h3 class="Titulo"> @ViewData["Title"] </h3>
    </div>
    <div class="col-md-4"></div>
</div>

<br />

<div class="row" id="secreto">
    @if (ViewBag.IsTrainer != true)
    {
        foreach (var item in Model)
        {
            <div class="pokemonSelect col-md-4" onclick="jsBehindPage().gotcha(@item.id)">
                <h2 class="text-center PokemonTitulo">@item.name.ToUpper()</h2>
                <img src=@item.sprites.front_default style="width:100%;" />
            </div>

        }
    }
</div>